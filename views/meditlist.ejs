<%-include('header.ejs')%>

<h1>묵상 리스트</h1>
<table border=1>
    <tr>
        <th>idx</th>
        
        <th>성경본문</th>
        <th>제목</th>
        <th>내용</th>
       
        
    </tr>
    <% lists.forEach(function(item){ %>
    <tr>
        <td><%=item.idx%></td>
        
        <td><%=item.bible_v%></td>
        <td><%=item.title%></td>
        <td><%-item.memo.replaceAll("\n","<br>")%></td>
        
        <td><a href="/meditdelete?idx=<%=item.idx%>" onclick="return confirm('정말로 삭제하겠습니까?')">삭제</a></td>
    </tr>
    <% }) %>
</table>
    
<%-include('footer.ejs')%>